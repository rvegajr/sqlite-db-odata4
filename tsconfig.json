    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "."
  },
  "references": [
    { "path": "./packages/odata-sqlite-contracts" },
    { "path": "./packages/odata-sqlite-core" },
